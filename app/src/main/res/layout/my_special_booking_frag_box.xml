<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="4dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@color/colorBlack">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:showDividers="middle"
            android:divider="@color/colorBlack">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="Route:"
                android:padding="6dp"/>


            <TextView
                android:id="@+id/departure_special_booking_frag_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:hint="Departure"
                android:padding="6dp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:hint="to"
                android:textAlignment="center"
                android:padding="6dp" />

            <TextView
                android:id="@+id/arrival_special_booking_frag_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:hint="Arrival"
                android:padding="6dp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:showDividers="middle"
            android:divider="@color/colorBlack">

<!--            <TextView-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="0.5"-->
<!--                android:hint="Date:"-->
<!--                android:padding="4dp" />-->


            <TextView
                android:id="@+id/departure_date_special_booking_frag_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="mm/dd/yyyy"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                app:drawableStartCompat="@drawable/ic_arrival_date_range_24" />


            <TextView
                android:id="@+id/time_special_booking_frag_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="hh:mm"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                app:drawableStartCompat="@drawable/ic_dept_time_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:divider="@color/colorBlack">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Vehicle:"
                android:padding="4dp" />

            <TextView
                android:id="@+id/vehicle_special_booking_frag_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="price"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="AC status:"
                android:padding="4dp" />

            <TextView
                android:id="@+id/ac_status_special_booking_frag_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="on/off"
                android:textAlignment="center"
                android:padding="4dp"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>